// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  OWNER
  MANAGER
  STAFF
}

enum WarehouseMemberRole {
  MANAGER
  STAFF
}

enum UnitOfMeasure {
  PIECE
  KG
  GRAM
  LITER
  ML
  METER
  CM
  BOX
  PACK
}

enum StockMovementType {
  RECEIPT
  DELIVERY
  ADJUSTMENT
  TRANSFER_IN
  TRANSFER_OUT
}

model User {
  id                      String                   @id @default(cuid())
  email                   String                   @unique
  password                String
  name                    String?
  emailVerified           Boolean                  @default(false)
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  refreshTokens           RefreshToken[]
  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens     PasswordResetToken[]
  passwordResetOTPs       PasswordResetOTP[]
  role                    UserRole
  warehouseMemberships    WarehouseMember[]
  stockMovements          StockMovement[]
  receiptsCreated         Receipt[]                @relation("ReceiptCreatedBy")
  receiptsUpdated         Receipt[]                @relation("ReceiptUpdatedBy")
  deliveriesCreated       Delivery[]               @relation("DeliveryCreatedBy")
  deliveriesUpdated       Delivery[]               @relation("DeliveryUpdatedBy")
  deliveriesReceived      Delivery[]               @relation("DeliveryUser")
}

model RefreshToken {
  id         String   @id @default(cuid())
  token      String   @unique
  userId     String
  expiresAt  DateTime
  revoked    Boolean  @default(false)
  createdAt  DateTime @default(now())
  lastUsedAt DateTime @default(now())
  ipAddress  String?
  userAgent  String?
  deviceName String?
  deviceType String?
  browser    String?
  os         String?
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, revoked])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  email     String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([email])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  email     String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([email])
}

model PasswordResetOTP {
  id        String   @id @default(cuid())
  otp       String   // Store hashed OTP
  userId    String
  email     String
  expiresAt DateTime
  verified  Boolean  @default(false)
  attempts  Int      @default(0)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([email])
  @@index([expiresAt])
}

model Warehouse {
  id          String            @id @default(cuid())
  name        String
  code        String            @unique
  address     String?
  city        String?
  state       String?
  country     String?
  postalCode  String?
  isActive    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  members     WarehouseMember[]
  locations   Location[]
  products    Product[]
  stockLevels StockLevel[]
  movements   StockMovement[]
  receipts    Receipt[]
  deliveries  Delivery[]

  @@index([isActive])
  @@index([code])
}

model WarehouseMember {
  id          String               @id @default(cuid())
  warehouseId String
  userId      String
  role        WarehouseMemberRole
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  warehouse   Warehouse            @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  user        User                 @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([warehouseId, userId])
  @@index([userId])
  @@index([warehouseId, role])
}

model Location {
  id            String          @id @default(cuid())
  warehouseId   String
  name          String
  code          String
  aisle         String?
  rack          String?
  shelf         String?
  bin           String?
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  warehouse     Warehouse       @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  stockLevels   StockLevel[]
  movements     StockMovement[]
  receiptItems  ReceiptItem[]
  deliveryItems DeliveryItem[]

  @@unique([warehouseId, code])
  @@index([warehouseId, isActive])
}

model ProductCategory {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]

  @@index([isActive])
}

model Product {
  id            String           @id @default(cuid())
  warehouseId   String
  sku           String
  name          String
  description   String?
  categoryId    String?
  unitOfMeasure UnitOfMeasure    @default(PIECE)
  reorderLevel  Int              @default(0)
  isActive      Boolean          @default(true)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  warehouse     Warehouse        @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  category      ProductCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  stockLevels   StockLevel[]
  movements     StockMovement[]
  receiptItems  ReceiptItem[]
  deliveryItems DeliveryItem[]

  @@unique([warehouseId, sku])
  @@index([warehouseId, isActive])
  @@index([categoryId])
}

model StockLevel {
  id          String    @id @default(cuid())
  productId   String
  warehouseId String
  locationId  String
  quantity    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  location    Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@unique([productId, warehouseId, locationId])
  @@index([productId])
  @@index([warehouseId])
  @@index([locationId])
  @@index([quantity])
}

model StockMovement {
  id          String            @id @default(cuid())
  productId   String
  warehouseId String
  locationId  String
  userId      String
  type        StockMovementType
  quantity    Int
  reference   String?
  notes       String?
  status      MovementStatus    @default(PENDING)
  createdAt   DateTime          @default(now())
  product     Product           @relation(fields: [productId], references: [id], onDelete: Cascade)
  warehouse   Warehouse         @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  location    Location          @relation(fields: [locationId], references: [id], onDelete: Cascade)
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([warehouseId])
  @@index([locationId])
  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([createdAt])
}

enum MovementStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ReceiptStatus {
  DRAFT
  READY
  DONE
}

enum DeliveryStatus {
  DRAFT
  READY
  DONE
}

model Vendor {
  id          String     @id @default(cuid())
  name        String
  companyName String?
  email       String?    @unique
  phone       String?
  address     String?
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  receipts    Receipt[]
  deliveries  Delivery[]

  @@index([isActive])
  @@index([email])
}

model Receipt {
  id              String        @id @default(cuid())
  referenceNumber String        @unique
  vendorId        String
  warehouseId     String
  status          ReceiptStatus @default(DRAFT)
  createdById     String
  updatedById     String?
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  vendor          Vendor        @relation(fields: [vendorId], references: [id], onDelete: Restrict)
  warehouse       Warehouse     @relation(fields: [warehouseId], references: [id], onDelete: Restrict)
  createdBy       User          @relation("ReceiptCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)
  updatedBy       User?         @relation("ReceiptUpdatedBy", fields: [updatedById], references: [id], onDelete: Restrict)
  items           ReceiptItem[]

  @@index([vendorId])
  @@index([warehouseId])
  @@index([status])
  @@index([createdAt])
}

model ReceiptItem {
  id               String   @id @default(cuid())
  receiptId        String
  productId        String
  locationId       String
  quantityOrdered  Int
  quantityReceived Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  receipt          Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  product          Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  location         Location @relation(fields: [locationId], references: [id], onDelete: Restrict)

  @@index([receiptId])
  @@index([productId])
  @@index([locationId])
}

model Delivery {
  id              String         @id @default(cuid())
  referenceNumber String         @unique
  vendorId        String?
  userId          String?
  warehouseId     String
  status          DeliveryStatus @default(DRAFT)
  createdById     String
  updatedById     String?
  notes           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  vendor          Vendor?        @relation(fields: [vendorId], references: [id], onDelete: Restrict)
  user            User?          @relation("DeliveryUser", fields: [userId], references: [id], onDelete: Restrict)
  warehouse       Warehouse      @relation(fields: [warehouseId], references: [id], onDelete: Restrict)
  createdBy       User           @relation("DeliveryCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)
  updatedBy       User?          @relation("DeliveryUpdatedBy", fields: [updatedById], references: [id], onDelete: Restrict)
  items           DeliveryItem[]

  @@index([vendorId])
  @@index([userId])
  @@index([warehouseId])
  @@index([status])
  @@index([createdAt])
}

model DeliveryItem {
  id               String   @id @default(cuid())
  deliveryId       String
  productId        String
  locationId       String
  quantityOrdered  Int
  quantityDelivered Int     @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  delivery         Delivery @relation(fields: [deliveryId], references: [id], onDelete: Cascade)
  product          Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  location         Location @relation(fields: [locationId], references: [id], onDelete: Restrict)

  @@index([deliveryId])
  @@index([productId])
  @@index([locationId])
}
